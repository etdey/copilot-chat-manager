{
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Debug chatmgr.py",
            "program": "${workspaceFolder}/chatmgr.py",
            "console": "integratedTerminal",
            "args": [
                "--argsExpand",
                "${input:cliArgs}"
            ],
            "env": {}
        }
    ],
    "inputs": [
        {
            "id": "cliArgs",
            "type": "promptString",
            "description": "Enter command-line arguments for chatmgr.py",
            "default": ""
        }
    ],
}